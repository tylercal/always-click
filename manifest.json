{
  "manifest_version": 3,

  "name": "Always Click",
  "description": "Automatically always click specified buttons on frequently visited pages.",
  "version": "1.1.2",

  "options_page": "src/options.html",

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "permissions": [
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "background": {
    "service_worker": "src/service_worker.js"
  }
}