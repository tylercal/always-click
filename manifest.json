{
  "manifest_version": 2,

  "name": "Always Click",
  "description": "Automatically always click specified buttons on frequently visited pages.",
  "version": "1.0.0",

  "options_page": "src/options.html",

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "page_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"},
    "default_title": "Always Click",
    "default_popup": "src/menu.html"
  },

  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "<all_urls>"
  ],

  "web_accessible_resources": [
    "images/*"
  ],

  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  }
}